    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch"
  },
  "keywords": [
    "syntaxy",
    "lexical",
    "lexicaljs",
    "editor",
    "text editor",
    "rich text",
    "rich text editor",
    "vanilla",
    "ui"
  ],
  "devDependencies": {
    "lexical": "^0.38.1",
    "@syntaxy/core": "^0.1.0"
  },
  "peerDependencies": {
    "lexical": ">=0.38.1",
    "@syntaxy/core": ">=0.1.0"
  }
}
