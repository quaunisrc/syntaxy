    "wysiwyg",
    "headless",
    "framework-agnostic",
    "contenteditable"
  ],
  "devDependencies": {
    "lexical": "^0.38.2"
  },
  "peerDependencies": {
    "lexical": ">=0.38.2"
  },
  "dependencies": {
    "@lexical/rich-text": "^0.38.2"
  }
